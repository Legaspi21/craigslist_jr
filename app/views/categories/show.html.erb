<% if @articles %>
	

<h1> <%= @category.title %></h1>


<% @articles.each do |article| %>
	<li> 

	<%= link_to article.name, category_article_path(@category, article) %> - $<%= article.price %>
	
	<% if article.user == current_user %>
  <%= link_to 'Edit', edit_category_article_path(@category, article) %> |
  <%= link_to 'Delete', category_article_path(@category, article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

  <% end %>
	</li>
<% end %>
<% end %>
<h2>Add a new article</h2>
<%= link_to 'New Article', new_category_article_path(@category) %>
<br><br>

<%= link_to 'Categories', categories_path %>