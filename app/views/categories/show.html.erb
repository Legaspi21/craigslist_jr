<% if @articles %>
	

<h1> <%= @category.title %></h1>


<% @articles.each do |article| %>
	<li> 

	<%= link_to article.name, category_article_path(@category, article) %> - $<%= article.price %>
  <%= link_to 'Edit', edit_category_article_path(@category, article) %> |
  <%= link_to 'Delete', category_article_path(@category, article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
	</li>
<% end %>
<% end %>
<h2>Add a new article</h2>

<%= render 'articles/form' %>

